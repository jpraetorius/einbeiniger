<% if flash[:message] %>
<div class="alert alert-success">
  <%= flash[:message] %>
</div>
<% end %>
<% if flash[:error] %>
<div class="alert alert-error">
  <%= flash[:error] %>
</div>
<% end %>
<div class="row-fluid" id="admin-row">
	<div class="span3" id="admin-nav">
		<ul class="nav nav-list">
			<li class="nav-header">Administration</li>
			<li><a href="/admin">Übersicht</a></li>
			<li><a href="/registrations">Anmeldungen</a></li>
			<li class="active"><a href="#">Einstellungen</a></li>
		</ul>
	</div>
	<div class="span9">
		<h2>Einstellungen</h2>
		<div class="row-fluid">
			<div class="span12">
				<form action="/settings" method="post">
					<fieldset>
						<legend>Applikationseinstellungen</legend>

						<label for="next_date">Nächste Sendung</label>
						<input type="date" name="next_date" id="next_date" value="<%= @next_date %>">
						<span class="help-block">Das Datum an dem Du die nächste Sendung planst. Es wird auf der Startseite angezeigt. Ausserdem wird die Registrierung automatisch 3 Tage vorher geöffnet und am Tag nach der Sendung geschlossen.</span>

						<label class="checkbox" for="delete_all">
							<input type="checkbox" name="delete_all" id="delete_all" value="delete_all_really" />Alle Anmeldungen löschen
						</label>
						<span class="help-block">Wenn Du diese Checkbox selektierst, werden alle momentan vorhandenen Anmeldungen gelöscht.</span>

						<%== csrf_tag %>

						<button type="submit" class="btn btn-primary" value="application" name="action">Speichern</button>
					</fieldset>
				</form>
				<form action="/settings" method="post" enctype="multipart/form-data">
					<fieldset>
						<legend>Account-Einstellungen</legend>
						<label for="username">Name</label>
						<input type="text" placeholder="Username" name="username" id="username" class="span4" value="<%= session[:user].name %>"/>
						<span class="help-block">Der Nutzername, mit dem Du Dich anmeldest.</span>

						<label for="password">Neues Passwort</label>
						<input type="password" name="password" id="password" class="span4" />
						<label for="passwordconfirm">Passwort wiederholen</label>
						<input type="password" name="passwordconfirm" id="passwordconfirm" class="span4" />
						<span class="help-block">Wenn Du Dein Passwort ändern willst: gib hier 2x das Neue ein.</span>

						<%== csrf_tag %>

						<button type="submit" class="btn btn-primary" value="user" name="action">Speichern</button>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>
