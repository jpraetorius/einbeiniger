<div class="row-fluid" id="admin-row">
  <div class="span3" id="admin-nav">
    <ul class="nav nav-list">
      <li class="nav-header">Administration</li>
      <li><a href="/admin">Übersicht</a></li>
      <li class="active"><a href="#">Anmeldungen</a></li>
      <li><a href="/settings">Einstellungen</a></li>
    </ul>
  </div>
  <div class="span9">
    <h2>Anmeldungen</h2>
    <p class="lead">Es sind momentan <span id="counter"><%=@count%></span> Anmeldungen in der Warteschleife</p>
    <form class="form-inline">
      <label>Anmeldungen filtern:</label>
      <input type="text" class="input-small" placeholder="Name">
      <input type="text" class="input-medium" placeholder="Tags">
      <button type="submit" class="btn">Suchen</button>
    </form>

    <table class="table table-striped table-hover" id="registrations-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Twitter</th>
          <th>E-Mail</th>
          <th>Thema</th>
        </tr>
      </thead>
      <tbody>
        <% @registrations.each do |registration| %>
        <tr class="data">
          <td><%=registration.name%></td>
          <td><a href="https://twitter.com/<%=registration.twitter%>"><%=registration.twitter%></a></td>
          <td><a href="mailto:<%=registration.email%>"><%=registration.email%></a></td>
          <td><%=registration.topics[0..50]%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%if @count > 10%>
    <div class="pagination">
      <ul>
        <% if @current_page > 1%>
        <li><a href="/registrations/<%=@current_page-1%>">&laquo; Zurück</a></li>
        <% else %>
        <li class="disabled"><a href="#">&laquo; Zurück</a></li>
        <% end %>
        <% for page in 1..@max_pages do %>
        <li <%=(page.eql? @current_page) ? "class='active'":''%>><a href="/registrations/<%=page%>"><%=page%></a></li>
        <% end %>
        <% if @current_page < @max_pages%>
        <li><a href="/registrations/<%=@current_page+1%>">Weiter &raquo;</a></li>
        <% else %>
        <li class="disabled"><a href="#">Weiter &raquo;</a></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </div>
</div>
<!-- Modal -->
<div id="detailsModal" class="modal hide" tabindex="-1" role="dialog">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="modal-header-label">Anmeldungsdetails</h3>
  </div>
  <div class="modal-body">
    <div class="row-fluid">
      <div class="span1">
        <label>Name:</label>
      </div>
      <div class="span4">
        <span id="details-name">Foo</span>
      </div>
      <div class="span1">
        <label>Tags:</label>
      </div>
      <div class="span6">
        <input name="tags" id="tags"/>
        <span class="help-block">Tags lassen sich später suchen.</span>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span1">
        <label>Email:</label>
      </div>
      <div class="span4">
        <span id="details-email"><a href="mailto:foo@mail.example">foo@mail.example</a></span>
      </div>
      <div class="span1">
        <label>Twitter:</label>
      </div>
      <div class="span6">
        <span id="details-twitter"><a href="https://twitter.com/foo">footwitter</a></span>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span1">
        <label>Skype:</label>
      </div>
      <div class="span4">
        <span id="details-skype">skypefoo</span>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span1">
        <label>Themen:</label>
      </div>
      <div class="span11">
        <span id="details-topics">foothemen</span>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Schliessen</button>
    <button class="btn btn-primary">Speichern</button>
  </div>
</div>